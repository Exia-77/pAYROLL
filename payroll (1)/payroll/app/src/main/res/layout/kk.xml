<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <TextView  
        android:id="@+id/txt"        android:layout_width="match_parent"       android:layout_height="wrap_content"
       android:textSize="50dp"
        android:layout_marginLeft="100dp"
        android:text="Result"
        android:textStyle="bold" 
        />
        <View
       android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E91E63"
  android:layout_below="@id/txt"
  android:id="@+id/line"/>
    
     <ScrollView
android:layout_below="@id/line"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:scrollbars="none">

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:shrinkColumns="1"
    >

<TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Regular pay"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        <TextView 
               android:id="@+id/pr"     
            android:paddingLeft="5dip"
            android:textStyle="italic"       
       android:gravity="left"
             />
    </TableRow>

<TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Overtime"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        <TextView
               android:id="@+id/ot"     
            android:paddingLeft="5dip"
         
            android:textStyle="italic"       
       android:gravity="left"
             />
    </TableRow>
<TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Employee Code"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        
             <TextView
     android:id="@+id/ec"
android:gravity="left"
android:textStyle="italic"
android:paddingLeft="5dip"
        /> 

   
    </TableRow>
<TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="State code"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        
             <TextView
     android:id="@+id/sc"
android:gravity="left"
android:textStyle="italic"
android:paddingLeft="5dip"
        /> 
 
    </TableRow>
    <TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="tax"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        
             <TextView
     android:id="@+id/tax"
android:gravity="left"
android:textStyle="italic"
android:paddingLeft="5dip"

        /> 
 
    </TableRow> 
    <TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Gros Pay"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        
             <TextView
     android:id="@+id/gp"
android:gravity="left"
android:textStyle="italic"
android:paddingLeft="5dip"

        /> 
 
    </TableRow> 
    <TableRow>
        <TextView
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Net Pay"
         android:gravity="center" 
        android:layout_marginRight="30dp"  />
        
             <TextView
     android:id="@+id/np"
android:gravity="left"
android:textStyle="italic"
android:paddingLeft="5dip"
        /> 
 
    </TableRow> 

</TableLayout>

 </ScrollView>  
</RelativeLayout>